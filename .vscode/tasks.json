{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Jekyll Front End",
            "type": "shell",
            "command": "./scripts/jekyll_serve_dev.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "mvn test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build Landing Image",
            "type": "shell",
            "command": "./ci/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Landing Image",
            "type": "shell",
            "command": "docker run --rm -p 9443:9443 -v ~/.kube/config:/root/.kube/config -u 0 landing:latest",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}